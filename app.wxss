/**app.wxss**/
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.background {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.headertxt {
    position: absolute;
    /* 或者 'fixed' 根据需要 */
    text-align: center;
    font-size: 30px;
    top: 30px;
    left: 0;
    /* 假设你想让它居中显示 */
    width: 100%;
    /* 宽度为100%以配合text-align:center使文字居中 */
    color: white;
}

.header {
    position: absolute;
    left: 15px;

    width: 350px;
    height: 97px;
    opacity: 1;
}

.option {
    position: absolute;
    top: 80%;
    width: 15%;
    height: 15%;
    opacity: 1;
}

.option image {
    position: absolute;
    left: 0%;
    top: 0%;
    width: 100%;
    height: 100%;
}

.option navigator {
    position: absolute;
    left: 0%;
    top: 0%;
    width: 100%;
    height: 100%;
}


.title {
    position: absolute;
    left: 10px;
    top: 5px;
    width: 400px;
    height: 40px;
    opacity: 1;
}

.title_txt {
    position: absolute;
    left: 60px;
    top: 6px;
    width: 227px;
    height: 13px;
    opacity: 1;
    /** 文本1 */
    font-size: 20px;
    font-weight: 900;
    letter-spacing: 0px;
    line-height: 34.75px;
    color: rgba(255, 255, 255, 1);
    text-align: left;
    vertical-align: top;
}