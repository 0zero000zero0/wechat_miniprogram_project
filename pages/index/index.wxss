@import "../../app.wxss";
/**index.wxss**/
page {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.scrollarea {
    flex: 1;
    overflow-y: hidden;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
    width: 80%;
}

.userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.usermotto {
    margin-top: 200px;
}

.avatar-wrapper {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
}

.avatar {
    display: block;
    width: 56px;
    height: 56px;
}

.nickname-wrapper {
    display: flex;
    width: 100%;
    padding: 16px;
    box-sizing: border-box;
    border-top: .5px solid rgba(0, 0, 0, 0.1);
    border-bottom: .5px solid rgba(0, 0, 0, 0.1);
    color: black;
}

.nickname-label {
    width: 105px;
}

.nickname-input {
    flex: 1;
}






.title {
    position: absolute;
    left: 10px;
    top: 141px;
    width: 430px;
    height: 153px;
    opacity: 1;
    /** 文本1 */
    font-size: 60px;
    font-weight: 900;
    letter-spacing: 10px;
    line-height: 71px;
    color: rgba(206, 209, 219, 1);
    text-align: left;
    vertical-align: top;
}

.in {
    position: absolute;
    left: 10px;
    top: 400px;
    width: 360px;
    height: 99px;
    opacity: 1;
}
.in navigator{
    position: absolute;
    width: 100%;
    height: 100%;
}
.in image{
    position: absolute;
    width: 100%;
    height: 100%;
}