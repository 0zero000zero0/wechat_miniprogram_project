.options-container {
    display: flex;
    flex-direction: row;
    /* 子元素按行排列 */
    white-space: nowrap;
    /* 防止子元素换行 */
    overflow-x: scroll;
    /* 允许水平滚动 */
}

.score-option {
    display: inline-block;
    align-items: center;
    /* 垂直居中子元素 */
    justify-content: center;
    /* 水平居中子元素 */
    text-align: center;
    height: 30%;
    width: 40%;
    background-size: cover;
    background-position: center;
    margin-right: 5%;
    margin-left: 5%;
    /* 选项之间的间距 */
}

.score-container {
    position: absolute;
    top: 10%;
    left: 5%;
    width: 90%;
    /* 修改为宽度占据整个屏幕的90% */
    height: 60%;
    white-space: nowrap;
    /* 防止子元素换行 */
    overflow-x: auto;
    /* 开启水平滚动 */
    overflow-y: hidden;
    /* 隐藏垂直滚动条 */
}

.image-item {
    color: white;
    display: inline-block;
    /* 修改为行内块元素，使其水平排列 */

    vertical-align: top;
    /* 顶部对齐 */
    width: 40%;
    /* 调整每个项目的宽度 */
    margin-right: 80%;
    /* 调整项目之间的右边距 */
    margin-bottom: 0;
    /* 取消底部边距 */
}




.score-option text {
    font-size: 5vw;
    /* 根据容器宽度的百分比来设置字体大小 */
    color: white;
    /* 文字颜色设置为白色 */
    text-align: center;
    /* 文字居中 */
    width: 100%;
    /* 文字占据整个选项宽度 */
}

.submitAll {
    position: absolute;
    bottom: 5%;
    left: 25%;
}

.grid-container {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.image-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}

.score-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    margin: 20rpx;
}
.score-txt{
    position: absolute;
    font-size: 200%;
    top: 50%;
    color: white    ;
}
.score-buttons button {
    margin-top: 100rpx;
    width: 40%;
    border: 1px solid #ccc;
    text-align: center;
}

.navigation-buttons {
    display: flex;
    justify-content: space-around;
    margin: 20rpx 0;
}